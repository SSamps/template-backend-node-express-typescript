{
    "name": "giftlistback",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
        "devContainer": "concurrently \"tsc -w\" \"nodemon --exec npm run dockerDev\"",
        "build": "tsc -p .",
        "start": "node dist/server.js",
        "dockerRemoveContainer": "docker rm listapp-backend -f",
        "dockerRemoveImage": "docker image rm listapp-backend:latest",
        "dockerBuildImage": "docker build -t listapp-backend:latest .",
        "dockerBuildContainer": "docker run --name listapp-backend -d -p 5000:5000 listapp-backend:latest",
        "dockerBuildContainerUsingVolume": "docker run --name listapp-backend -v $(pwd):/app -d -p 5000:5000 listapp-backend:latest",
        "dockerBuild": "npm-run-all -s -c build dockerRemoveContainer dockerRemoveImage dockerBuildImage dockerBuildContainer",
        "dockerDev": "npm-run-all -s -c dockerRemoveContainer dockerRemoveImage dockerBuildImage dockerBuildContainerUsingVolume"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SSamps/giftlistback.git"
    },
    "keywords": [],
    "author": "",
    "license": "",
    "bugs": {
        "url": "https://github.com/SSamps/giftlistback/issues"
    },
    "homepage": "https://github.com/SSamps/giftlistback#readme",
    "dependencies": {
        "@types/bcrypt": "^3.0.1",
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mongoose": "^5.10.5",
        "bcryptjs": "^2.4.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.10.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.12.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.41",
        "concurrently": "^6.0.2",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.4"
    }
}
